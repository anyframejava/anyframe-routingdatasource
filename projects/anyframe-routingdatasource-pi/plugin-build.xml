<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="routingdatasource" description="RoutingDataSource Plugin consists of simple code that provides basic guidelines on how to use AbstractRoutingDataSource by Spring.">
	<groupId>org.anyframe.plugin</groupId>
	<artifactId>anyframe-routingdatasource-pi</artifactId>
	<version>1.0.2</version>
	<dependent-plugins>
		<dependent-plugin name="query" version="2.0.0&gt;*" />
	</dependent-plugins>
	<resources>
		<resource dir="src/main/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/main/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/test/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/test/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/main/webapp/WEB-INF/jsp" filtered="false"
			packaged="false">
			<include name="**/*.jsp" />
		</resource>
		<resource dir="db/hsqldb/routingdatasourcedb" filtered="false"
			packaged="false">
			<include name="**/*.*" />
		</resource>
	</resources>
	<build>
		<filesets>
			<fileset dir="src/main/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/routingdatasource/**/*.java" />
			</fileset>
			<fileset dir="src/main/resources" filtered="true" packaged="false">
				<include name="**/*routingdatasource*.xml" />
			</fileset>
			<fileset dir="src/test/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/routingdatasource/**/*.java" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="false" packaged="false">
				<include name="**/routingdatasource/**/*.*" />
				<include name="**/anyframe.jsp" />
			</fileset>
			<fileset dir="db/hsqldb/routingdatasourcedb" filtered="false" packaged="false">
				<include name="**/*.*" />
			</fileset>
			<fileset dir="db/resources" filtered="false" packaged="false">
				<include name="**/*.*" />
			</fileset>
		</filesets>
	</build>
	<samples>true</samples>
	<interceptor>
		<class></class>
	</interceptor>
	<essential>false</essential>
	<checked>false</checked>
</plugin>